---
export type TimelineItem = { date: string; event: string };

interface Props {
  timeline: TimelineItem[];
}

const { timeline } = Astro.props;
---

<ul role="list" class="mb-0 ml-0 space-y-2 md:space-y-4">
  {
    timeline.map(({ date, event }, i) => (
      <li class="relative flex gap-x-2">
        {i !== timeline.length - 1 && (
          <div class="absolute -bottom-6 left-0 top-0 flex w-6 justify-center">
            <div class="w-px bg-gray-400" />
          </div>
        )}
        <div class="relative flex h-6 w-6 flex-none items-center justify-center bg-gray-800">
          <div class="h-1.5 w-1.5 rounded-full bg-gray-200 ring-1 ring-gray-400" />
        </div>
        <time class="flex-none py-1 text-xs/5 text-gray-400 md:text-sm">{date}</time>
        <p class="mb-0 flex-auto py-1 text-xs/5 text-gray-200 md:text-sm">{event}</p>
      </li>
    ))
  }
</ul>
